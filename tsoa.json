{
  "swagger": {
    "outputDirectory": ".",
    "entryFile": "./src/app.ts",
    "host": "localhost:5500",
    "basePath": "/",
    "securityDefinitions": {
      "api_key": {
        "type": "apiKey",
        "name": "access_token",
        "in": "query"
      },
      "tsoa_auth": {
        "type": "oauth2",
        "authorizationUrl": "http://swagger.io/api/oauth/dialog",
        "flow": "implicit",
        "scopes": {
          "write:pets": "modify things",
          "read:pets": "read things"
        }
      }
    },
    "tags": [
      {
        "name": "Account",
        "description": "Operations about Accounts"
      },
      {
        "name": "Balance",
        "description": "Operations about Balances"
      },
      {
        "name": "Cuurency",
        "description": "Operations about Currencies"
      }
    ]
  },
  "routes": {
    "basePath": "/",
    "entryFile": "./src/app.ts",
    "routesDir": "."
  }
}
